/*--------------------------------------------------------------------
*
* BASE
*
--------------------------------------------------------------------*/

*, *:after, *:before
  -moz-box-sizing: border-box
  -webkit-box-sizing: border-box
  box-sizing: border-box

html
  font-size: 100%

body
  font: 500 $font-base/$line-height-base $font-freight
  text-rendering: optimizeLegibility
  -webkit-font-smoothing: antialiased

h1, h2, h3, h4, h5, h6
  font-family: $font-proxima
  font-weight: 800

h1, h2, h3
  line-height: $line-height-tight

h1
  font-size: $font-heading-one

h2
  font-size: $font-heading-two

h3
  font-size: $font-heading-three

h4
  font-size: $font-heading-four

h5
  font-size: $font-heading-five

h6
  font-size: $font-heading-six

small
  font-size: $font-small

a
  cursor: pointer

.cf
  &:before,
  &:after
    content: " "
    display: table

  &:after
    clear: both

.pull-left
  float: left

.pull-right
  float: right

img, video, iframe
  max-width: 100%